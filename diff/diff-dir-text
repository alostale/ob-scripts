#!/bin/bash

dir1=$1
dir2=$2
exp=$3

echo "original: "$dir1
echo "modified: "$dir2
echo "regexp  : "$exp

for f in $(find $dir2 -type f); do
  fileToCompare="${f/$dir2/''}"
  if [[ $fileToCompare =~ ".hg" ]]; then continue; fi

  f1=$dir1/$fileToCompare
  f2=$dir2/$fileToCompare

  if ! [ -e "$f2" ]; then continue; fi

  if [ -e "$f2" ] && ! [ -e "$f1" ]; then
    # new file
    comparison=$(cat "$f2")
  else
    if cmp -s "$f1" "$f2"; then continue; fi
    comparison=$(diff ""$f1"" ""$f2"")
  fi

  if [[ $comparison =~ $exp ]]; then
    echo "  "$fileToCompare
  fi
done
